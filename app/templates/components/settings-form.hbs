<div class="section-details">
    <div class="section-title">Settings</div>
</div>
<div class="section-main">
    <div class="switch-row" ng-if="event._id">
        <div class="switch-details">
            <div class="title">
                Poll Status
            </div>
            <div class="description">
                Let people vote on the poll.
            </div>
        </div>
        <div class="switch">
            {{x-toggle theme='flip' size='small' toggle='setEventStatus' value=model.isClosed
                name='eventStatus' onLabel='Open' offLabel='Closed'}}
        </div>
    </div>
    <div class="switch-row">
        <div class="switch-details">
            <div class="title">
                Notifications
            </div>
            <div class="description">
                Send me an email when someone votes or comments on the event.
            </div>
        </div>
        <div class="switch">
            {{x-toggle theme='flip' size='small' toggle='setEventStatus' value=model.creator.isNotified
                name='eventNotifications'}}
        </div>
    </div>
    {{#unless new}}
    <div class="switch-row">
        <div class="switch-details">
            <div class="title">
                Delete Event
            </div>
            <div class="description">
                Once you delete an event it will no longer be accessible.
            </div>
        </div>
        <div class="switch">
            <button type="button" {{action 'setEventStatus' 'eventDelete'}} class="btn {{if isDeleted 'disabled' 'danger'}}">
              {{if isDeleted 'Request Sent' 'Delete Event'}}
            </button>
        </div>
    </div>
    {{/unless}}
</div>
{{yield}}
