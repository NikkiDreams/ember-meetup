<div class="date-picker">
    <div class="wrapper">
        <div class="date-picker-head">
            <a href="#" class="arrow" {{action prevMonth}}>&#10094;</a>
            <span class="title">
                <span class="title-text">{{scope.title}}</span>
            </span>
            <a href="#" class="arrow" {{action nextMonth}}>&#10095;</a>
        </div>
        <div class="dow">
            <div class="day">
                Su
            </div>
            <div class="day">
                Mo
            </div>
            <div class="day">
                Tu
            </div>
            <div class="day">
                We
            </div>
            <div class="day">
                Th
            </div>
            <div class="day">
                Fr
            </div>
            <div class="day">
                Sa
            </div>
        </div>
        <div class="values">
          {{#each scope.days as |day index|}}
            <div class="value {{if day.isOutsideMonth 'outside'}} {{if day.isToday 'today'}} {{!--if day.isActive(day.date) 'active' --}}" {{action selectDay day}}>
                {{!--day.date--}}
              {{moment-format day.date 'D'}}
            </div>
          {{/each}}
        </div>
    </div>
</div>
{{yield}}
